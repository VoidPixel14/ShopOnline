@inherits DisplayProductsBase

@foreach (var item in Products)
{
    <div class="col-md-3 mb-2">
        <a href="/ProductDetails/@item.Id">
            <div class="card">
                <img class="img-thumbnail " src="@item.ImageURL">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @item.Name
                    </h5>
                    <p class="card-text">
                        @{
                            var nairaCulture = new System.Globalization.CultureInfo("en-NG")
                            {
                                NumberFormat =
                                {
                                    CurrencySymbol = "₦"
                                }
                            };
                        }
                        <b>@item.Price.ToString("C", nairaCulture)</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}